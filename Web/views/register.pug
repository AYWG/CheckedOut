extends layout.pug

block append head-content
  link(href='css/register_page.css' rel='stylesheet')
  link(href='css/alert.css', rel='stylesheet', type='text/css')      
  link(href='https://fonts.googleapis.com/css?family=Source+Sans+Pro', rel='stylesheet', type='text/css')

block custom-widget
  include alert.pug
  .Register
    form(onsubmit='return checkForm(this);' method='post')
      h5  Welcome to CheckedOut! 
      //if status
        h4 #{status}    
      input(type='text', name='name', required='', placeholder='Name', autocomplete='off')
      input(type='text', name='email', required='', placeholder='Enter Email', autocomplete='off')
      input(type='text', name='email_verify', required='', placeholder='Confirm Email', autocomplete='off')
      input(type='password', name='password', required='', placeholder='Password', autocomplete='off')
      input(type='password', name='password_verify', required='', placeholder='Confirm Password', autocomplete='off')
      //- For Testing
      input(type='hidden', name='test', value='False')
      input(type='submit', value='Register', title='Register')
