extends layout.pug

block append head-content
  link(href='css/login_page.css', rel='stylesheet')
  link(href='https://fonts.googleapis.com/css?family=Source+Sans+Pro', rel='stylesheet', type='text/css')

block custom-widget
  // Login Form
  #login-page
    form(method='post')
      h4 CheckedOut - Login
      if login_failed
        h5 #{login_failed}
      input.email(type='text', name='email', required='', placeholder='Enter Email')
      input.pw(type='password', name='password', required='', placeholder='Enter Password')
      li
        a(href='#') Verify Email
      li
        a(href='/register') Register
      input.button(type='submit', value='Log in')   
               
