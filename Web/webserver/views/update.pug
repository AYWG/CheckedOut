extends layout.pug

block append head-content
  link(href='css/update.css' rel='stylesheet')
  link(href='http://fonts.googleapis.com/css?family=Source+Sans+Pro', rel='stylesheet', type='text/css')

block navigation-bar
  #custom-bootstrap-menu.navbar.navbar-default(role='navigation')
    .container-fluid
      include navbar-header.pug
      .collapse.navbar-collapse.navbar-menubuilder
        ul.nav.navbar-nav.navbar-right
          // DROP DOWN MENU
          li.dropdown
            a.dropdown-toggle(href='#', data-toggle='dropdown')
              | Account
              span.caret
            ul.dropdown-menu
              li
                a(href='/login') Login
              li
                a(href='/register') Register
              li
                a(href='/update') Update Account
              li
                a(href='/') Logout
          li.dropdown
            a.dropdown-toggle(href='#', data-toggle='dropdown')
              | Cart
              span.caret
            ul.dropdown-menu
              li
                a(href='#') View Lists

block custom-widget
  .Update
    form(method='post')
      h5 Update Your Password
      input(type='password', name='old_password', required='', placeholder='Old Password', autocomplete='off')
      input(type='password', name='password', required='', placeholder='New Password', autocomplete='off')
      input(type='password', name='password_verify', required='', placeholder='Confirm New Password', autocomplete='off')
      input(type='submit', value='Update Account', title='Update')
