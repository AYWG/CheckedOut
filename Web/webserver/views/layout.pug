doctype html
html(lang='en')
  head
    block head-content
      title #{title} 
      meta(charset='utf-8')
      meta(name='viewport', content='width=device-width, initial-scale=1')
      script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js')
      script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js')
      link(href='css/bootstrap.min.css', rel='stylesheet')
      link(href='css/navbar.css', rel='stylesheet', type='text/css')

  body
    block navigation-bar
      #custom-bootstrap-menu.navbar.navbar-default(role='navigation')
        .container-fluid
          include navbar-header.pug
          .collapse.navbar-collapse.navbar-menubuilder
            ul.nav.navbar-nav.navbar-right
              // DROP DOWN MENU
              if logged_in_name
                include logged_in_menus.pug
              else
                include logged_out_menus.pug
      
    block custom-widget
    block content
    block footer-scripts
      script(src='js/jquery-3.1.1.min.js', type='text/javascript')
      script(src='js/browser.js', type='text/javascript')      
